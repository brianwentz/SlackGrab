<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Silent operation: Log to file only, never to console -->
    <property name="LOG_DIR" value="${LOCALAPPDATA}/SlackGrab/logs"/>
    <property name="LOG_FILE" value="slackgrab"/>

    <!-- File appender with daily rotation -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${LOG_FILE}.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${LOG_FILE}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Async appender for better performance -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
    </appender>

    <!-- Root logger - INFO level for normal operation -->
    <root level="INFO">
        <appender-ref ref="ASYNC_FILE"/>
    </root>

    <!-- Application-specific loggers -->
    <logger name="wentz.brian" level="DEBUG"/>

    <!-- Reduce verbosity of third-party libraries -->
    <logger name="com.slack" level="INFO"/>
    <logger name="io.javalin" level="WARN"/>
    <logger name="org.eclipse.jetty" level="WARN"/>
    <logger name="okhttp3" level="INFO"/>
</configuration>
